extends layout.pug

block content
  body
    .modal-dialog
        .modal-content
          // Modal Header
          .modal-header
            button.close(type="button", data-dismiss="modal")
              span(aria-hidden="true") Ã—
              span.sr-only Close
            h4#myModalLabel.modal-title
              | Choix de restaurant
          // Modal Body
          .modal-body
            form(role='form' method='GET' action='/explo')
              select#name.form-control
                each cuisine in cuisines
                  option(value=cuisine) #{cuisine}
              input#name.form-control(type='text', placeholder='indique ton type de cuisine' name='cuisine')
              select#name.form-control
                each borough in boroughs
                  option(value=borough) #{borough}
              input#name.form-control(type='text', placeholder='indique ton arrondissement' name='borough')
              button.btn.btn-primary(type="submit") Recherche
           
              


            div.form-group
            if name
                p #{name}
            if restaurants
                each restaurant in restaurants
                    p Name : #{restaurant.name}
                    p Cuisine : #{restaurant.cuisine}
                    p Adresse : #{restaurant.address.building} #{restaurant.address.street} #{restaurant.borough}
                    p ---------------------